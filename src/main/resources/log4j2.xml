<?xml version="1.0" encoding="UTF-8"?>
<Configuration >

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		
		<File name="FileAppender" fileName="logs/app.log" bufferedIO="false" append="true">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</File>
		
	</Appenders>

	<Loggers>
		<Logger level="debug" name="com.shalkevich.andrei.intexProject.utils.Parser">
			<AppenderRef ref="FileAppender"/>
		</Logger>
	
		<Root level="all">
		    <AppenderRef ref="Console"/>
		</Root>
	</Loggers>

</Configuration>